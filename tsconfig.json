{
  // "files": ["./typings/index.d.ts"],
  "include": ["**/*.ts", "**/*.tsx"],
  "compileOnSave": true,
  "strict": true,
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@*": ["src/web/*", "src/server/*"]
    },
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/web/typings",
      "./src/server/typings",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "jsx": "react"
  }
}
